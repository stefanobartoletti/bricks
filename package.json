{
  "name": "bricks",
  "version": "0.25.0",
  "description": "A modular WordPress starter theme powered by Bootstrap 5 and Gulp",
  "author": "Stefano Bartoletti (https://www.stefanobartoletti.it)",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanobartoletti/bricks"
  },
  "scripts": {
    "dev": "gulp default",
    "build": "gulp build",
    "watch": "gulp watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@popperjs/core": "^2.10.1",
    "bootstrap": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@mr-hope/gulp-sass": "^2.0.0",
    "@rbnlffl/gulp-rollup": "^0.1.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "browser-sync": "^2.27.5",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-checktextdomain": "^2.2.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-environments": "^1.0.1",
    "gulp-fa-minify": "^1.2.2",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-purgecss": "^4.0.3",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.0.1",
    "gulp-ttf2woff2": "^4.0.1",
    "gulp-wp-pot": "^2.5.0",
    "rollup": "^2.56.3"
  },
  "release-it": {
    "git": {
      "requireBranch": "master"
    },
    "github": {
      "release": true,
      "releaseName": null
    },
    "npm": {
      "skipChecks": true,
      "publish": false
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addVersionUrl": true
      },
      "@release-it/bumper": {
        "out": {
          "file": "style.css",
          "type": "text/css"
        }
      }
    }
  }
}
