{
  "name": "bricks",
  "version": "0.27.0",
  "description": "A modular WordPress starter theme powered by Bootstrap 5 and Gulp",
  "author": "Stefano Bartoletti (https://www.stefanobartoletti.it)",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanobartoletti/bricks"
  },
  "scripts": {
    "dev": "gulp default",
    "build": "gulp build",
    "watch": "gulp watch",
    "composer": "composer",
    "lint:js": "eslint --ext js,mjs --fix --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{scss,css}\" --fix --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style && composer lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@rbnlffl/gulp-rollup": "^0.1.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "browser-sync": "^2.27.7",
    "del": "^6.0.0",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-checktextdomain": "^2.2.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-environments": "^1.0.1",
    "gulp-fa-minify": "^1.2.2",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-purgecss": "^4.0.3",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-ttf2woff2": "^4.0.1",
    "gulp-wp-pot": "^2.5.0",
    "rollup": "^2.59.0",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.1"
  },
  "release-it": {
    "git": {
      "requireBranch": "master"
    },
    "github": {
      "release": true,
      "releaseName": null
    },
    "npm": {
      "skipChecks": true,
      "publish": false
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addVersionUrl": true
      },
      "@release-it/bumper": {
        "out": [
          "style.css",
          "composer.json"
        ]
      }
    }
  }
}
